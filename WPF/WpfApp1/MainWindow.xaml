<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="firstproject" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,71,0,0" TextWrapping="Wrap" 
                   Text="Select a message option and then choose the Display button." 
                   VerticalAlignment="Top" Height="29" Width="344"/>
        <RadioButton x:Name="helloButton" Content="Hello" HorizontalAlignment="Left" Margin="153,171,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <RadioButton x:Name="goodbyeButton" Content="Goodbye" HorizontalAlignment="Left" Margin="544,166,0,0" VerticalAlignment="Top"/>
        <Button x:Name="displayButton" Content="Display" HorizontalAlignment="Left" Margin="337,316,0,0" 
                VerticalAlignment="Top" Height="43" Width="88"
                Click="displayButton_Click"/>
    </Grid>
</Window>
